{
  "name": "bookshop-ts",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6",
    "express": "^4",
    "hdb": "^0.19.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "cds2types": "^3.0.0",
    "sqlite3": "^5.0.4",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "start": "cds run",
    "watch": "cds-ts watch",
    "build:cf": "npm run build:cds && npm run cleanup:ts && npm run build:ts",
    "build:ts": "tsc",
    "build:cds": "cds build --production",
    "cleanup:ts": "npx rimraf gen/srv/srv/**/*.ts"
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        }
      },
      "[development]": {
        "db": {
          "kind": "sql"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
